#!/bin/bash

if [[ "$1" == "--upgrade" ]] || [[ "$1" == "--install" ]]; then
    if [[ "$1" == "--upgrade" ]]; then
        echo "Upgrading solc-select..."
        docker pull trailofbits/solc-select:latest
    else
        echo "Installing solc-select..."
    fi
    if [[ ! -z "$2" ]]; then
        mkdir -p $2/bin
    fi
    export PREFIX="$2"
    docker run --privileged --read-only -i --rm --entrypoint='/bin/sh' trailofbits/solc-select:latest -c 'cat /usr/bin/install.sh' | bash
else
    docker run --privileged --read-only -i --rm --cap-add=SYS_ADMIN -e SOLC_VERSION="$SOLC_VERSION" -e HOST_PWD="$PWD" --mount type=bind,source=/,target=/workdir trailofbits/solc-select:latest $@
fi
